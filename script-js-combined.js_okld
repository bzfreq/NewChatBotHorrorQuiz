    let myList = JSON.parse(localStorage.getItem('horror-my-list') || '[]');
    
    if (!myList.includes(movieTitle)) {
        myList.push(movieTitle);
        localStorage.setItem('horror-my-list', JSON.stringify(myList));
        loadMyList();
        
